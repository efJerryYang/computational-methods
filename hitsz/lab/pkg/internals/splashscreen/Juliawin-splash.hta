<html>
    <hta:application id="oHTA"
        border="none"
        caption="no"
        contextmenu="no"
        innerborder="no"
        scroll="no"
        showintaskbar="no"
    />
    <script language="VBScript">
        Sub Window_OnLoad
            ' Resize and position the window
            width = 393 : height = 275
            window.resizeTo width, height
            window.moveTo screen.availWidth\2 - width\2, screen.availHeight\2 - height\2

            ' Automatically close the windows after 5 seconds
            idTimer = window.setTimeout("vbscript:window.close", 20000)
        End Sub
    </script>
    <body>
        <table border=0 width="100%" height="100%">
            <tr>
                <td align="center" valign="middle">
                    <img src="Juliawin-splash.png"/>
                </td>
            </tr>
        </table>
    </body>
</html>